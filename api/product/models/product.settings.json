{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "product",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "required": false
    },
    "price": {
      "type": "float"
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "categories": {
      "via": "products",
      "collection": "category"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "normal",
        "featured",
        "trending"
      ],
      "default": "normal",
      "required": false
    },
    "New": {
      "type": "boolean",
      "default": true
    },
    "sub_categories": {
      "via": "products",
      "collection": "sub-category",
      "dominant": true
    },
    "mainImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "SizeGuide": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "highlights": {
      "type": "json"
    },
    "discount": {
      "type": "integer",
      "default": 0
    },
    "reviews": {
      "type": "component",
      "repeatable": true,
      "component": "review.review"
    },
    "sizes": {
      "type": "component",
      "repeatable": true,
      "component": "sizes.size"
    },
    "colours": {
      "type": "component",
      "repeatable": true,
      "component": "colours.colours"
    },
    "reviewFormLink": {
      "type": "string"
    },
    "previousPrice": {
      "type": "float"
    },
    "details": {
      "type": "richtext"
    }
  }
}
